
digraph CognitiveLoadModel {
    graph [
        fontsize=14,
        label="Cognitive Load Model: Immediate vs Adjustive Grammar\n(Referenced to Kahneman's System 1 / System 2)",
        labelloc="t"
    ];

    node [shape=box, style=filled, fontsize=12, fillcolor="#FFFFFF"];

    // Immediate Grammar Path
    subgraph cluster_IG {
        label="Immediate Grammar (System 1-like processing)";
        color="#CDE7FF";
        style=filled;

        IG1 [label="自動的処理\n(automatic processing)"];
        IG2 [label="短い応答・chunk\n(low planning demand)"];
        IG3 [label="低負荷の認知処理\n(lower working memory load)"];
        IG4 [label="相互作用を維持\n(interaction-friendly)"];
        
        IG1 -> IG2 -> IG3 -> IG4;
    }

    // Adjustive Grammar Path
    subgraph cluster_AG {
        label="Adjustive Grammar (System 2-like processing)";
        color="#FFE7CD";
        style=filled;

        AG1 [label="意識的処理\n(deliberate processing)"];
        AG2 [label="文の精密構築\n(higher planning demand)"];
        AG3 [label="認知的負荷の増大\n(increased working memory use)"];
        AG4 [label="応答までの時間延長\n(slower interaction)"];

        AG1 -> AG2 -> AG3 -> AG4;
    }

    // Starting point
    Start [label="発話要求\n(intent to speak)", shape=oval, fillcolor="#E8E8E8"];

    // End point
    End [label="発話の実現\n(utterance produced)", shape=oval, fillcolor="#E8E8E8"];

    // Arrows to pathways
    Start -> IG1 [label="自然な応答場面\n(conversational/interactive)", fontsize=11];
    Start -> AG1 [label="説明・慎重さが必要な場面\n(expository/precise)", fontsize=11];

    // Returns to end
    IG4 -> End;
    AG4 -> End;

    // Balanced interaction arrows (non-critical)
    IG3 -> AG1 [style=dashed, label="必要に応じて精密化\n(when elaboration is needed)", fontsize=11];
    AG4 -> IG1 [style=dashed, label="対話状況で即時化\n(when interaction requires immediacy)", fontsize=11];
}
