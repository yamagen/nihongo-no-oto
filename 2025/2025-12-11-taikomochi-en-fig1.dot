digraph IG_AG_System {
rankdir=TB;
node [shape=box, style=rounded, fontsize=10];

    # System 1 cluster
    subgraph cluster_sys1 {
        label="System 1 (intuition / fast response)";
        style=filled;
        color="#FFF0CC";

        IG1[label="IG: instant reactions"];
        IG2[label="IG: tolerance of inconsistency"];
        IG3[label="IG: priority on rhythm / flow"];
        IG4[label="IG: temperature control (harmony > meaning)"];

        IG1 -> IG2 -> IG3 -> IG4;
    }

    # System 2 cluster
    subgraph cluster_sys2 {
        label="System 2 (reasoning / integration)";
        style=filled;
        color="#CCE0FF";

        AG1[label="AG: context maintenance"];
        AG2[label="AG: coherence management"];
        AG3[label="AG: structuring and explanation"];
        AG4[label="AG: adjustment for clarity"];

        AG1 -> AG2 -> AG3 -> AG4;
    }

    # Align IG1 and AG1 (invisible edge trick)
    IG1 -> AG1 [style=invis, weight=10];

    # Shared purpose
    subgraph cluster_goal {
        label="Shared purpose: interpersonal uplift";
        style=dashed;
        goal[label="Realization of interpersonal harmony"];
    }

    IG4 -> goal [label="via IG (System 1 style)"];
    AG4 -> goal [label="via AG (System 2 style)"];

}
