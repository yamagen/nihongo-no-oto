
digraph CognitionLayers {

    rankdir=LR;
    fontsize=12;
    node [shape=box, style=rounded, fontsize=12];

    subgraph cluster_immediate {
        label="Immediate Layer（即時層・動物の中心機能）";
        style=filled;
        color="#d0e8ff";
        IM1 [label="外的刺激への瞬間反応"];
        IM2 [label="情動：恐怖・不安・愛着・喪失の痛み"];
        IM3 [label="短期の文脈連鎖（いま・ここ）"];
    }

    subgraph cluster_adjustive {
        label="Adjustive Layer（調整層・人間の発達した層）";
        style=filled;
        color="#ffe5cc";
        AD1 [label="文脈を統合・再解釈する"];
        AD2 [label="時間的因果：過去→現在→未来"];
        AD3 [label="物語として意味づける"];
        AD4 [label="死・喪失を概念化・保持"];
    }

    subgraph cluster_species {
        label="Species Comparison（種による違い）";
        style=filled;
        color="#e8e8e8";
        ANIMAL [label="動物：即時層は強い／調整層は弱い"];
        HUMAN [label="人間：即時層＋調整層が強力"];
    }

    // Connections
    ANIMAL -> IM1;
    ANIMAL -> IM2;
    ANIMAL -> IM3;

    HUMAN -> IM1;
    HUMAN -> IM2;
    HUMAN -> IM3;
    HUMAN -> AD1;
    HUMAN -> AD2;
    HUMAN -> AD3;
    HUMAN -> AD4;

    IM1 -> AD1 [label="（人間では調整へ接続）"];
    IM2 -> AD3 [label="悲しみの意味づけ"];
    IM3 -> AD2 [label="時間の統合"];

}
